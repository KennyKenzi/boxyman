<div class="row">
    <div class="col-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Create project
                </h5>
                <hr>
                <form method="POST" action="/projects/store">
                    <div class="md-form mb-5">
                        <input type="text" name="name" id="name" class="form-control required" />
                        <label for="name">Project name</label>
                    </div>

                    <div class="md-form mb-5">
                        <input type="text" name="baseUrl" id="url" class="form-control required">
                        <label for="url">Base url</label>
                    </div>

                    <div class="md-form mb-5">
                        <textarea type="text" name="description" id="description" class="md-textarea form-control" rows="3"></textarea>
                        <label for="description">Description</label>
                    </div>

                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="isPublished" class="custom-control-input" id="publish">
                        <label class="custom-control-label" for="publish">Published?</label>
                    </div>

                    <div class="md-form text-right">
                        <button type="submit" class="btn btn-default">
                            <i class="fa fa-save"></i> Add project
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

