<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Projects
                    <a href="/projects/create" class="btn btn-primary btn-sm px-3">
                        <i class="fa fa-plus" aria-hidden="true"></i> New project
                    </a>
                </h5>
                <hr>
                <% if(projects.length > 0) { %>
                    <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Published?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < projects.length; i++) {%>
                                <tr>
                                    <td><%= projects[i].name %></td>
                                    <td><%= projects[i].isPublished %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="lead">No projects found</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">New project</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <project-form />
            </div>
        </div>
    </div>
</div>